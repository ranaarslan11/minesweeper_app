<div class="container mt-5">
  <h1 class="text-center mb-4">Generate Minesweeper Board</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @board, local: true, class: 'card p-4 shadow-sm') do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Board name' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :width, class: 'form-label' %>
          <%= form.number_field :width, class: 'form-control', min: 5, max: 50, step: 1, placeholder: 'Enter board width' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :height, class: 'form-label' %>
          <%= form.number_field :height, class: 'form-control', min: 5, max: 50, step: 1, placeholder: 'Enter board height' %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :mines, class: 'form-label' %>
          <%= form.number_field :mines, class: 'form-control', min: 1, placeholder: 'Number of mines' %>
        </div>

        <%= form.submit 'Generate Board', class: 'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>

  <h2 class="text-center mt-5">Recent Boards</h2>
  <ul class="list-group list-group-flush mx-auto" style="max-width: 600px;">
    <% @recent_boards.each do |board| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to board.name, board_path(board), class: 'text-decoration-none text-primary fw-bold' %> 
        <span class="text-muted">by <%= board.email %> (<%= board.created_at.strftime('%B %d, %Y') %>)</span>
      </li>
    <% end %>
  </ul>

  <div class="text-center mt-3">
    <%= link_to 'View All Boards', boards_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
